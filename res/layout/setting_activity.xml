<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent" android:layout_height="fill_parent" 
    android:orientation="vertical" android:background="#ebebeb">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings" android:layout_marginLeft="10dp" android:layout_marginTop="50dp"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="학년도/학기 설정"
                    android:textColor="#4b4b4b"
                    android:textSize="9pt" />

                <EditText
                    android:id="@+id/etYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/inputbox"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLines="1"
                    android:text="2012" >

                    <requestFocus />
                </EditText>

                <Spinner
                    android:id="@+id/Smt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/inputbox"
                    android:overScrollMode="always" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtFree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="위젯 색 설정"
                    android:textColor="#4b4b4b"
                    android:textSize="9pt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/foreColor"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="#0000FF"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="글씨 색상"
                        android:textSize="15pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/inclass"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="#0000FF"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="강의 있음"
                        android:textSize="15pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/noclass"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="#0000FF"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="강의 없음"
                        android:textSize="15pt" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="* 색상을 클릭하셔서 변경하실 수 있습니다."
                    android:textColor="#2b2b2b"
                    android:textSize="7pt" />
                
                <SeekBar android:id="@+id/AlphaSlider" android:paddingLeft="20.0dip" android:paddingRight="20.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10.0dip" android:max="255" android:progress="0" android:secondaryProgress="0" android:progressDrawable="@drawable/seekbar_progress" android:thumb="@drawable/seek_thumb" android:background="@drawable/seekbar_progress_bg"/>

                <TextView
                    android:id="@+id/txtAlphaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="투명도 : 0%"
                    android:textColor="#2b2b2b"
                    android:textSize="7pt" />

                <TextView
                    android:id="@+id/tvMChapel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="* 투명도가 100%에 가까울수록 배경이 잘 보입니다."
                    android:textColor="#2b2b2b"
                    android:textSize="7pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="개인정보"
                    android:textColor="#4b4b4b"
                    android:textSize="9pt" />

                <Button
                    android:id="@+id/btnBan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@layout/button_selector"
                    android:text="밴 조회"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@layout/button_selector"
                    android:text="자동 로그인 해제"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/BtnClearCache"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@layout/button_selector"
                    android:text="저장된 시간표 지우기"
                    android:textSize="8pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawingCacheQuality="high"
                    android:src="@drawable/legal" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>