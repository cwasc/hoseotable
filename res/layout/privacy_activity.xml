<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#ebebeb">

    <TextView
        android:id="@+id/txtFree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Hoseo Table 이용약관"
        android:textColor="#2b2b2b"
        android:textSize="10pt" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#f3f3f3" android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/update_details"
                android:textColor="#6b6b6b" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <Button
            android:id="@+id/btndismiss"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ab_stacked_transparent_light_holo"
            android:text="거절"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnAgree"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ab_stacked_transparent_light_holo"
            android:text="동의"
            android:textSize="30sp" />

    </LinearLayout>

</LinearLayout>